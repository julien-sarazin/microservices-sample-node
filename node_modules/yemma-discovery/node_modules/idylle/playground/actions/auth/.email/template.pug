doctype html
head
  meta(charset='utf-8')
table(style='border-collapse:collapse;margin:5% auto;width:600px;height:80%;border-spacing:0px;')
  tr(style='background-color: #FF5D00;')
    td
      table(style='text-align:left;height:auto;width:80%; margin:auto;')
        tr
          td(style='padding:50px 0px;text-align:center;')
            span(style="padding-top: 30px;display:block;font-size:17px;")
              | #{ resources('image-title')}
  tr(style='background-image: url("https://www.dropbox.com/s/odyz2edzvgqs0fh/pattern_mail_bg.png");height:auto;')
    td(style='padding-top:10%;padding-bottom:10%;')
      table(style='text-align:left;height:auto;width:80%; margin:auto;')
        tr(style='font-size:30px;align-text:justify;')
          td(style='padding:0px;')
            | #{ resources('title')}
        tr(style='margin-top:50px;font-size:15px;align-text:justify;')
          td(style='padding-top:30px;')
            | #{ resources('content-1')}
        tr(style='font-size:15px;align-text:justify;')
          td(style='padding-top:30px;')
            | #{ resources('content-2')}
        tr
          td(style='padding:0px;text-align:center;')
            a(href=`${callback}?token=${token}`, style='color:white;text-decoration:none;background-color:#FF5D00;margin-top:30px;padding:14px 40px;border-radius:3px;font-size:16px;display:inline-block;cursor:pointer;')
              | #{ resources('btn-action')}
        tr(style='margin-top:50px;font-size:15px;align-text:justify;')
          td(style='padding-top:30px;')
            | #{ resources('content-3')}
  tr
    td(style='padding-top : 20px;text-align: center;')
      | #{ resources('footer')}